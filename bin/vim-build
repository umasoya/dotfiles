#!/bin/bash
# vim: ft=sh expandtab
# 雑だからそのうち整理するかも(?)
#
# depends
# ncurses-devel lua-devel python-devel ruby-devel perl-ExtUtils-Embed

set -eux

REPO=${HOME}/vim
DEIN_DIR=${HOME}/dotfiles/.vim/dein.vim

if [[ ! -e ${REPO} ]]; then
  git clone https://github.com/vim/vim.git ${HOME}/vim
fi

if [[ ! -e ${DEIN_DIR} ]]; then
  git clone https://github.com/Shougo/dein.vim ${DEIN_DIR}
fi

cd ${REPO}

# とりあえずCentOSのみ対応
if [[ ${DISTRIBUTION} = "CentOS" ]]; then
  sudo yum -y install \
    ncurses-devel \
    lua-devel \
    python-devel \
    ruby-devel \
    perl-ExtUtils-Embed
fi

./configure \
  --enable-multibyte \
  --with-features=huge \
  --enable-luainterp \
  --enable-perlinterp \
  --enable-pythoninterp \
  --with-python-config-dir=/usr/lib64/python2.7/config \
  --enable-rubyinterp \
  --with-ruby-command=/usr/bin/ruby \
  --enable-fail-if-missing

make && sudo make install
cd && rm -rf ${REPO}
