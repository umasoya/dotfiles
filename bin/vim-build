#!/bin/bash
# vim: ft=sh expandtab
# 雑だからそのうち整理するかも(?)
#
# depends
# ncurses lua python ruby perl

REPO=${HOME}/vim

if [[ ! -e ${REPO} ]]; then
  git clone https://github.com/vim/vim.git ${HOME}/vim
fi

cd ${REPO}

sh configure \
  --enable-multibyte \
  --with-features=huge \
  --enable-luainterp \
  --enable-perlinterp \
  --enable-pythoninterp \
  --with-python-config-dir=/usr/lib64/python2.7/config \
  --enable-rubyinterp \
  --with-ruby-command=/usr/bin/ruby \
  --enable-fail-if-missing

make && sudo make install
