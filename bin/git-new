#!/bin/bash
#vim: ft=sh
# git new <new_branch> [<start_point>]

# check argument
if [[ -z $1 ]]; then
  echo "too few argument"
  exit 1
fi

if [[ $# -gt 2 ]]; then
  echo "too many arguments"
  exit 1
fi

if [[ ! -z $2 ]]; then
  start_point="origin/$1"
fi

if [[ -z `git branch | grep -w $1` ]]; then
  git checkout -b "$1" "$2"
else
  git checkout $1 $2
fi
