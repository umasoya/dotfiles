#!/bin/bash
# vim: ft=sh expandtab
#
# 雑だからそのうち整理するかも(?)
#

set -eux

REPO=${HOME}/zsh

if [[ ! -e ${REPO} ]]; then
  git clone https://github.com/zsh-users/zsh.git ${REPO}
fi

cd ${REPO}
latest=`git describe --abbrev=0 --tags`

if [[ ! -e configure ]]; then
  sh ./Util/preconfig
fi

sh ./configure
make && sudo make install
