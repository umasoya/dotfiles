# Common gitconfig on local
[core]
	excludesfile = ~/.gitignore
[push]
	default = simple
[color]
	ui = auto
[branch]
    autosetuprebase = always
[user]
    useConfigOnly = true
[ghq]
    root = ~/repos/src
[alias]
    graph = log --graph --date-order -C -M --pretty=format:\"<%h> %ad [%an] %Cgreen%d%Creset %s\" --all --date=short
